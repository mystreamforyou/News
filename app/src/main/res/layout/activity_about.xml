<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rl_root"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.jack.news.widget.TopActionBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_base">

        <ImageView
            android:id="@+id/iv_about"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_about"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/app_name"
            android:textColor="@color/text_base_color"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_about"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/version"
            android:textColor="@color/text_hint_color"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_version"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/self_ad_text"
            android:textColor="@color/color_shadow"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_copyright2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:text="@string/copyright2"
            android:textColor="@color/text_hint_color"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_copyright2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="@string/copyright"
            android:textColor="@color/text_hint_color"
            android:textSize="13sp"/>
    </RelativeLayout>
</LinearLayout>